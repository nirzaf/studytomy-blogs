---

<header class="fixed top-0 left-0 w-full bg-white shadow-lg z-50 border-b-[3px] border-orange-peel">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex-shrink-0">
                <img class="h-10 w-auto" src="https://ik.imagekit.io/studytomy/minimal%20primary%20logo%20mini.png?updatedAt=1732362156819" alt="StudyToMy Logo">
            </div>
            <div class="hidden sm:block">
                <div class="flex space-x-8">
                    <a href="/" class="text-dark-slate hover:text-orange-peel px-3 py-2 text-lg font-semibold transition-colors duration-200 relative group">
                        Home
                        <span class="absolute bottom-0 left-0 w-full h-0.5 bg-orange-peel transform scale-x-0 transition-transform duration-200 group-hover:scale-x-100"></span>
                    </a>
                    <a href="/guide" class="text-dark-slate hover:text-orange-peel px-3 py-2 text-lg font-semibold transition-colors duration-200 relative group">
                        Guide
                        <span class="absolute bottom-0 left-0 w-full h-0.5 bg-orange-peel transform scale-x-0 transition-transform duration-200 group-hover:scale-x-100"></span>
                    </a>
                    <a href="/docs" class="text-dark-slate hover:text-orange-peel px-3 py-2 text-lg font-semibold transition-colors duration-200 relative group">
                        Documentation
                        <span class="absolute bottom-0 left-0 w-full h-0.5 bg-orange-peel transform scale-x-0 transition-transform duration-200 group-hover:scale-x-100"></span>
                    </a>
                    <a href="/community" class="text-dark-slate hover:text-orange-peel px-3 py-2 text-lg font-semibold transition-colors duration-200 relative group">
                        Community
                        <span class="absolute bottom-0 left-0 w-full h-0.5 bg-orange-peel transform scale-x-0 transition-transform duration-200 group-hover:scale-x-100"></span>
                    </a>
                </div>
            </div>
            <!-- Mobile menu button -->
            <div class="sm:hidden">
                <button type="button" class="text-dark-slate hover:text-orange-peel p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-inset focus:ring-orange-peel">
                    <span class="sr-only">Open main menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile menu, show/hide based on menu state -->
        <div class="sm:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="/" class="text-dark-slate hover:text-orange-peel block px-3 py-2 text-base font-medium">Home</a>
                <a href="/guide" class="text-dark-slate hover:text-orange-peel block px-3 py-2 text-base font-medium">Guide</a>
                <a href="/docs" class="text-dark-slate hover:text-orange-peel block px-3 py-2 text-base font-medium">Documentation</a>
                <a href="/community" class="text-dark-slate hover:text-orange-peel block px-3 py-2 text-base font-medium">Community</a>
            </div>
        </div>
    </nav>
</header>

<script>
    const mobileMenuButton = document.querySelector('button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });
</script>
