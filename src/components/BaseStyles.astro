<style is:global>
  /* Base styles */
  html {
    @apply bg-white scroll-smooth;
  }

  body {
    @apply bg-white text-dark-slate antialiased;
  }

  /* Typography */
  h1, h2, h3, h4, h5, h6 {
    @apply text-prussian-blue font-bold;
  }

  h1 { @apply text-4xl md:text-5xl mb-6; }
  h2 { @apply text-3xl md:text-4xl mb-5; }
  h3 { @apply text-2xl md:text-3xl mb-4; }
  h4 { @apply text-xl md:text-2xl mb-3; }
  h5 { @apply text-lg md:text-xl mb-2; }
  h6 { @apply text-base md:text-lg mb-2; }

  /* Links */
  a:not([class]) {
    @apply text-orange-peel hover:text-burnt-sienna transition-colors duration-200;
  }

  /* Lists */
  ul:not([class]), ol:not([class]) {
    @apply pl-6 mb-4 space-y-2;
  }

  ul:not([class]) { @apply list-disc; }
  ol:not([class]) { @apply list-decimal; }

  /* Code blocks */
  code {
    @apply bg-bone text-prussian-blue px-1.5 py-0.5 rounded text-sm font-mono;
  }

  pre {
    @apply bg-dark-slate text-white p-4 rounded-lg overflow-x-auto mb-4;
  }

  pre code {
    @apply bg-transparent text-inherit p-0;
  }

  /* Quotes */
  blockquote {
    @apply border-l-4 border-orange-peel pl-4 italic my-4 text-gray-blue bg-white;
  }

  /* Tables */
  table {
    @apply w-full border-collapse mb-4 bg-white;
  }

  th {
    @apply bg-bone text-prussian-blue font-bold p-2 border border-gray-blue;
  }

  td {
    @apply p-2 border border-gray-blue bg-white;
  }

  /* Form elements */
  input, textarea, select {
    @apply bg-white border border-gray-blue rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-peel focus:border-transparent;
  }

  button {
    @apply bg-orange-peel text-white px-4 py-2 rounded hover:bg-burnt-sienna transition-colors duration-200;
  }

  /* Custom elements */
  .card {
    @apply bg-white rounded-lg shadow-md p-6 border border-gray-blue/10;
  }

  .tag {
    @apply inline-flex items-center px-3 py-1 rounded-full text-sm bg-maize text-prussian-blue;
  }

  .badge {
    @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-peel text-white;
  }

  /* Utility classes */
  .prose {
    @apply max-w-none bg-white;
  }

  .prose a {
    @apply text-orange-peel hover:text-burnt-sienna no-underline;
  }

  .prose code {
    @apply text-prussian-blue bg-bone;
  }

  .prose pre {
    @apply bg-dark-slate;
  }

  .prose blockquote {
    @apply border-orange-peel text-gray-blue bg-white;
  }

  /* Section backgrounds */
  section {
    @apply bg-white;
  }
</style>
