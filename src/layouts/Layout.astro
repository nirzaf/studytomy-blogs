---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "StudyToMy - Your Learning Platform" } = Astro.props;
import Navigation from '../components/Navigation.astro';
import BaseStyles from '../components/BaseStyles.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-white text-dark-slate">
		<Navigation />
		<main class="pt-20 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto prose bg-white">
			<slot />
		</main>
		<BaseStyles />
	</body>
</html>

<style is:global>
	:root {
		/* Primary Colors */
		--prussian-blue: #003049;
		--cinnabar: #D62828;
		--orange-peel: #F77F00;
		--maize: #FCBF49;
		--bone: #EAE2B7;
		
		/* Secondary Colors */
		--burnt-sienna: #e56b49;
		--dark-slate: #2b2e44;
		--deep-red: #953137;
		--gray-blue: #a1a4b0;
		--taupe-gray: #a0949c;
		
		/* Accent Colors */
		--coral: #FC8862;
		--light-coral: #FC7174;

		/* Theme Colors */
		--text-primary: var(--prussian-blue);
		--text-secondary: var(--dark-slate);
		--accent-primary: var(--orange-peel);
		--accent-secondary: var(--burnt-sienna);
		--background: #ffffff;
		--border-color: var(--gray-blue);
	}

	:root {
		scroll-behavior: smooth;
	}

	body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		background: var(--background);
		margin: 0;
		padding: 0;
		color: var(--text-primary);
	}

	h1, h2, h3, h4, h5, h6 {
		@apply text-prussian-blue font-bold;
	}

	h1 {
		@apply text-4xl mb-6;
	}

	h2 {
		@apply text-3xl mb-4;
	}

	h3 {
		@apply text-2xl mb-3;
	}

	a:not([class]) {
		@apply text-orange-peel hover:text-burnt-sienna transition-colors duration-200;
	}

	p {
		@apply mb-4 leading-relaxed;
	}

	code {
		@apply bg-bone text-prussian-blue px-1.5 py-0.5 rounded text-sm font-mono;
	}

	pre {
		@apply bg-dark-slate text-white p-4 rounded-lg overflow-x-auto mb-4;
	}

	pre code {
		@apply bg-transparent text-inherit p-0;
	}

	blockquote {
		@apply border-l-4 border-orange-peel pl-4 italic my-4 text-gray-blue;
	}

	ul:not([class]), ol:not([class]) {
		@apply pl-6 mb-4 space-y-2;
	}

	ul:not([class]) {
		@apply list-disc;
	}

	ol:not([class]) {
		@apply list-decimal;
	}
</style>
